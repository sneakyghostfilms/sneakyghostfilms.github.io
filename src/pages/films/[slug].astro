---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import CastGrid from '../../components/CastGrid.astro';
import { films } from '../../data/films';

export function getStaticPaths() {
  return films.map((film, index) => {
    const prevFilm = films[index - 1] || films[films.length - 1];
    const nextFilm = films[index + 1] || films[0];

    return {
      params: { slug: film.slug },
      props: { film, prevFilm, nextFilm }
    };
  });
}

const { film, prevFilm, nextFilm } = Astro.props;
---

<Layout title={film.title} description={film.description} isProjectPage={true}>
  <Fragment slot="head">
    <style>
      .film-hero {
        position: relative;
        min-height: calc(100vh - 60px); /* Full viewport minus header */
        display: flex;
        flex-direction: column;
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
      }

      .film-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(0,0,0,0.6));
        pointer-events: none;
      }

      .film-hero-content {
        position: relative;
        z-index: 1;
        text-align: center;
        color: #fff;
        padding: 0 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        flex: 1; /* Take up available space, pushing nav to bottom */
        min-height: 300px;
      }

      .film-hero-content .separator-small {
        display: flex;
        justify-content: center;
        width: 100%;
      }

      .film-hero h2 {
        font-family: 'Montserrat', sans-serif;
        font-size: clamp(2rem, 5vw, 4rem);
        font-weight: 700;
        margin-bottom: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }

      .film-hero h3 {
        font-family: 'Lato', sans-serif;
        font-size: 1.2rem;
        font-weight: 300;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        opacity: 0.9;
      }

      .hero-film-nav {
        position: relative;
        z-index: 2;
        display: flex;
        justify-content: space-between;
        background: rgba(0, 0, 0, 0.7);
        padding: 20px 40px;
      }

      .hero-film-nav a {
        color: #fff;
        text-decoration: none;
        font-family: 'Montserrat', sans-serif;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        display: flex;
        align-items: center;
        gap: 10px;
        transition: opacity 0.3s ease;
      }

      .hero-film-nav a:hover {
        opacity: 0.7;
      }

      .hero-film-nav .arrow {
        font-size: 1.2rem;
      }

      @media (max-width: 600px) {
        .hero-film-nav {
          padding: 15px 20px;
        }
        .hero-film-nav .title {
          display: none;
        }
        .hero-film-nav .arrow {
          font-size: 1.5rem;
        }
      }

      .film-content {
        background: #111;
        color: #fff;
      }

      .film-section {
        padding: 60px 20px;
        max-width: 1000px;
        margin: 0 auto;
      }

      .film-intro {
        display: flex;
        flex-wrap: wrap;
        gap: 40px;
        margin-bottom: 60px;
      }

      .film-accolades {
        flex: 1;
        min-width: 280px;
        font-family: 'Montserrat', sans-serif;
        font-size: 0.95rem;
        font-weight: 600;
        line-height: 1.8;
        color: #d4af37;
      }

      .film-description {
        flex: 1;
        min-width: 280px;
        font-family: 'Lato', sans-serif;
        font-size: 1.1rem;
        line-height: 1.8;
        color: #ccc;
      }

      .section-title {
        font-family: 'Montserrat', sans-serif;
        font-size: 1.5rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        text-align: center;
        margin-bottom: 40px;
        color: #fff;
      }

      .cast-section {
        margin-bottom: 60px;
      }

      .videos-section {
        margin-top: 60px;
      }

      .video-section {
        margin-bottom: 50px;
      }

      .video-title {
        font-family: 'Montserrat', sans-serif;
        font-size: 1.2rem;
        font-weight: 600;
        text-align: center;
        margin-bottom: 20px;
        color: #fff;
      }

      .video-wrapper {
        max-width: 800px;
        margin: 0 auto;
      }

      .video-container {
        position: relative;
        padding-bottom: 56.25%;
        height: 0;
        overflow: hidden;
        border-radius: 4px;
        background: #000;
      }

      .video-container iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: none;
      }

      .back-link {
        display: inline-block;
        margin-top: 40px;
        padding: 12px 24px;
        border: 1px solid #fff;
        color: #fff;
        text-decoration: none;
        font-family: 'Montserrat', sans-serif;
        text-transform: uppercase;
        font-size: 0.9rem;
        letter-spacing: 0.1em;
        transition: all 0.3s ease;
      }

      .back-link:hover {
        background: #fff;
        color: #111;
      }

      .center-text {
        text-align: center;
      }

      @media (max-width: 768px) {
        .film-hero {
          background-attachment: scroll;
        }

        .film-intro {
          grid-template-columns: 1fr;
          gap: 20px;
        }
      }
    </style>
  </Fragment>

  <Header projectTitle={film.title} />

  <section
    class="film-hero text-light"
    style={`background-image: url(${film.heroImage});`}
  >
    <div class="film-hero-content">
      <h2>{film.title}</h2>
      <div class="separator-small"><span></span></div>
      <h3>{film.genre}</h3>
    </div>

    <nav class="hero-film-nav" aria-label="Film navigation">
      <a href={`/films/${prevFilm.slug}`} class="hero-nav-prev">
        <span class="arrow">&larr;</span>
        <span class="title">{prevFilm.title}</span>
      </a>
      <a href={`/films/${nextFilm.slug}`} class="hero-nav-next">
        <span class="title">{nextFilm.title}</span>
        <span class="arrow">&rarr;</span>
      </a>
    </nav>
  </section>

  <div class="page-body">
    <div class="film-content">
      <div class="film-section">
        <div class="film-intro">
          <div class="film-accolades">
            {film.accolades || "A Sneaky Ghost Films production."}
          </div>
          <div class="film-description">
            {film.description}
          </div>
        </div>

        {film.cast.length > 0 && (
          <div class="cast-section">
            <h4 class="section-title">Cast</h4>
            <CastGrid cast={film.cast} />
          </div>
        )}

        {film.videos.length > 0 && (
          <div class="videos-section">
            {film.videos.map((video) => (
              <div class="video-section">
                <h4 class="video-title">{video.title}</h4>
                <div class="video-wrapper">
                  <div class="video-container">
                    <iframe
                      src={`https://www.youtube.com/embed/${video.youtubeId}?rel=0`}
                      title={`${film.title} - ${video.title}`}
                      allowfullscreen
                      loading="lazy"
                    ></iframe>
                  </div>
                </div>
              </div>
            ))}
          </div>
        )}

        <div class="center-text">
          <a href="/#productions" class="back-link">Back to Productions</a>
        </div>
      </div>
    </div>

    <Footer />
  </div>
</Layout>
