---
import { projects } from '../data/projects';
---

<section id="labs" class="labs-section">
  <div class="section-inner">
    <div class="wrapper">
      <div class="main-title align-center">
        <h2><strong>Projects</strong></h2>
        <p class="labs-subtitle">Software and AI experiments from Sneaky Ghost.</p>
      </div>
    </div>
    <div class="spacer spacer-medium"></div>

    <div class="labs-projects">
      {projects.map((project, index) => (
        <>
          {index > 0 && <div class="project-separator"><span></span></div>}
          <article class={`project-card ${index % 2 === 1 ? 'reverse' : ''}`}>
            <div class="project-image-wrapper">
              <div class="project-image">
                {project.image ? (
                  <img src={project.image} alt={`${project.title} screenshot`} loading="lazy" />
                ) : (
                  <div class="image-placeholder">
                    <span class="placeholder-text">{project.title}</span>
                  </div>
                )}
                <div class="image-hover-overlay"></div>
              </div>
            </div>
            <div class="project-details">
              <h3 class="project-title">{project.title}</h3>
              <p class="project-description">{project.longDescription || project.description}</p>
              <div class="project-tech">
                {project.tech.map((tech) => (
                  <span class="tech-tag">{tech}</span>
                ))}
              </div>
              {(project.github || project.link) && (
                <div class="project-links">
                  {project.github && (
                    <a href={project.github} class="project-link" target="_blank" rel="noopener noreferrer">
                      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                      </svg>
                      View on GitHub
                    </a>
                  )}
                  {project.link && (
                    <a href={project.link} class="project-link" target="_blank" rel="noopener noreferrer">
                      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                        <polyline points="15 3 21 3 21 9"/>
                        <line x1="10" y1="14" x2="21" y2="3"/>
                      </svg>
                      View Project
                    </a>
                  )}
                </div>
              )}
            </div>
          </article>
        </>
      ))}
    </div>
  </div>
</section>

<style>
  .labs-section {
    padding: 80px 0;
    background: #0a0a0a;
  }

  .labs-subtitle {
    font-family: 'Lato', sans-serif;
    font-size: 1.1rem;
    color: rgba(0, 206, 209, 0.6);
    letter-spacing: 0.05em;
    margin-top: 12px;
  }

  .labs-projects {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 40px;
    display: flex;
    flex-direction: column;
    gap: 60px;
  }

  /* Separator between projects */
  .project-separator {
    display: flex;
    justify-content: center;
    margin: 0;
  }

  .project-separator span {
    display: block;
    width: 200px;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(0, 206, 209, 0.3), transparent);
  }

  /* Card layout */
  .project-card {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    align-items: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    padding: 24px;
    border-radius: 12px;
  }

  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 40px rgba(0, 206, 209, 0.1);
  }

  .project-card.reverse {
    direction: rtl;
  }

  .project-card.reverse > * {
    direction: ltr;
  }

  /* Image wrapper for overflow hidden on zoom */
  .project-image-wrapper {
    border-radius: 8px;
    overflow: hidden;
    border: 1px solid rgba(0, 206, 209, 0.4);
    box-shadow:
      0 4px 30px rgba(0, 206, 209, 0.1),
      inset 0 1px 3px rgba(0, 0, 0, 0.4);
  }

  .project-image {
    position: relative;
    aspect-ratio: 16 / 10;
    overflow: hidden;
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.4s ease;
  }

  .project-card:hover .project-image img {
    transform: scale(1.03);
  }

  /* Hover overlay on image */
  .image-hover-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      transparent 60%,
      rgba(0, 206, 209, 0.08) 100%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .project-card:hover .image-hover-overlay {
    opacity: 1;
  }

  .image-placeholder {
    width: 100%;
    height: 100%;
    min-height: 280px;
    background: linear-gradient(135deg, #111 0%, #1a1a1a 50%, #0d1f1f 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    transition: transform 0.4s ease;
  }

  .project-card:hover .image-placeholder {
    transform: scale(1.03);
  }

  .image-placeholder::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      radial-gradient(circle at 20% 30%, rgba(0, 206, 209, 0.08) 0%, transparent 50%),
      radial-gradient(circle at 80% 70%, rgba(0, 206, 209, 0.05) 0%, transparent 40%);
  }

  .placeholder-text {
    font-family: 'JetBrains Mono', 'Fira Code', monospace;
    font-size: 1.5rem;
    color: rgba(0, 206, 209, 0.4);
    letter-spacing: 0.1em;
    text-transform: uppercase;
    z-index: 1;
  }

  .project-details {
    padding: 20px 0;
  }

  .project-title {
    font-family: 'JetBrains Mono', 'Fira Code', monospace;
    font-size: 1.8rem;
    font-weight: 500;
    color: #00CED1;
    margin: 0 0 16px 0;
    letter-spacing: 0.02em;
  }

  .project-description {
    font-family: 'Lato', sans-serif;
    font-size: 1.05rem;
    line-height: 1.7;
    color: #ccc;
    margin: 0 0 20px 0;
  }

  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-bottom: 24px;
  }

  .tech-tag {
    font-family: 'JetBrains Mono', 'Fira Code', monospace;
    font-size: 0.8rem;
    padding: 6px 14px;
    background: rgba(0, 206, 209, 0.12);
    color: #00CED1;
    border-radius: 4px;
    border: 1px solid rgba(0, 206, 209, 0.25);
  }

  .project-links {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-family: 'Lato', sans-serif;
    font-size: 0.95rem;
    color: #00CED1;
    text-decoration: none;
    padding: 10px 18px;
    border: 1px solid rgba(0, 206, 209, 0.4);
    border-radius: 4px;
    transition: all 0.2s ease;
  }

  .project-link:hover {
    background: rgba(0, 206, 209, 0.15);
    border-color: #00CED1;
    box-shadow: 0 0 20px rgba(0, 206, 209, 0.2);
  }

  .project-link svg {
    flex-shrink: 0;
  }

  @media (max-width: 900px) {
    .labs-section {
      padding: 60px 0;
    }

    .labs-projects {
      padding: 0 20px;
      gap: 50px;
    }

    .project-card {
      grid-template-columns: 1fr;
      gap: 24px;
      padding: 16px;
    }

    .project-card:hover {
      transform: translateY(-2px);
    }

    .project-card.reverse {
      direction: ltr;
    }

    .project-image {
      aspect-ratio: 16 / 9;
    }

    .image-placeholder {
      min-height: 200px;
    }

    .project-title {
      font-size: 1.5rem;
    }

    .project-description {
      font-size: 1rem;
    }

    .project-separator span {
      width: 120px;
    }
  }

  @media (max-width: 640px) {
    .labs-projects {
      gap: 40px;
    }

    .project-card {
      padding: 12px;
    }

    .project-details {
      padding: 0;
    }

    .project-title {
      font-size: 1.3rem;
    }

    .placeholder-text {
      font-size: 1.2rem;
    }

    .project-links {
      flex-direction: column;
    }

    .project-link {
      justify-content: center;
    }

    .project-separator span {
      width: 80px;
    }
  }
</style>
