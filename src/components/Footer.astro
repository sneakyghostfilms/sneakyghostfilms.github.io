---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { platform: "facebook", url: "https://facebook.com/sneakyghost/" },
  { platform: "youtube", url: "https://www.youtube.com/@sneakyghostfilms" },
];
---

<footer role="contentinfo">
  <div class="footer-inner wrapper">
    <a href="#" id="backtotop" aria-label="Back to top">To Top</a>
    <ul class="socialmedia-widget left-float">
      {socialLinks.map((social) => (
        <li class={social.platform}>
          <a href={social.url} aria-label={social.platform} target="_blank" rel="noopener noreferrer"></a>
        </li>
      ))}
    </ul>
    <div class="copyright right-float">
      Copyright &copy; {currentYear} by Sneaky Ghost Films.
    </div>
  </div>
</footer>

<style is:global>
  footer[role="contentinfo"] {
    background: #111 !important;
  }

  footer .copyright {
    color: rgba(255, 255, 255, 0.5) !important;
  }

  #backtotop {
    color: rgba(255, 255, 255, 0.6) !important;
    border-color: rgba(255, 255, 255, 0.3) !important;
  }

  #backtotop:hover {
    color: #fff !important;
    border-color: rgba(255, 255, 255, 0.6) !important;
  }

  footer .socialmedia-widget li a {
    color: rgba(255, 255, 255, 0.6) !important;
  }

  footer .socialmedia-widget li a:hover {
    color: #fff !important;
  }
</style>

<script>
  // Back to top button (vanilla JS)
  document.addEventListener('DOMContentLoaded', () => {
    const backToTop = document.getElementById('backtotop');
    if (backToTop) {
      backToTop.addEventListener('click', (e) => {
        e.preventDefault();
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });
    }
  });
</script>
