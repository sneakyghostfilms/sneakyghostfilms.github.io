---
interface Props {
  slides?: string[];
  videoFile?: string;
  videoPoster?: string;
  logo?: string;
  mode?: "films" | "labs";
}

const {
  slides = ["Captivating stories", "New realities", "Artistic vision"],
  videoFile = "/files/uploads/main_background_vid",
  videoPoster = "/files/uploads/1690x1100.jpg",
  logo = "/files/uploads/catlogo.svg",
  mode = "films"
} = Astro.props;
---

<section id="home" class="hero-section text-light">
  <!-- SVG filter for ghostly mist effect -->
  <svg class="svg-filters" aria-hidden="true">
    <defs>
      <filter id="ghostly-mist" filterUnits="objectBoundingBox" primitiveUnits="userSpaceOnUse">
        <feTurbulence
          type="fractalNoise"
          baseFrequency="0.015"
          numOctaves="3"
          result="noise"
        >
          <animate
            attributeName="baseFrequency"
            values="0.015;0.02;0.015"
            dur="8s"
            repeatCount="indefinite"
          />
        </feTurbulence>
        <feDisplacementMap
          in="SourceGraphic"
          in2="noise"
          scale="8"
          xChannelSelector="R"
          yChannelSelector="G"
        >
          <animate
            attributeName="scale"
            values="8;12;8"
            dur="6s"
            repeatCount="indefinite"
          />
        </feDisplacementMap>
      </filter>
      <filter id="glow">
        <feGaussianBlur stdDeviation="2" result="coloredBlur"/>
        <feMerge>
          <feMergeNode in="coloredBlur"/>
          <feMergeNode in="SourceGraphic"/>
        </feMerge>
      </filter>
    </defs>
  </svg>

  <div class="hero-background">
    <!-- Films: video background -->
    <div class="hero-bg-films">
      <video
        class="hero-video"
        autoplay
        muted
        loop
        playsinline
        poster={videoPoster}
      >
        <source src={`${videoFile}.webm`} type="video/webm" />
        <source src={`${videoFile}.mp4`} type="video/mp4" />
      </video>
      <div class="hero-overlay"></div>
    </div>
    <!-- Labs: animated circuit grid -->
    <div class="hero-bg-labs">
      <canvas id="circuit-canvas"></canvas>
      <div class="hero-overlay hero-overlay-labs"></div>
    </div>
  </div>

  <div class="hero-logo">
    <img src={logo} alt="Sneaky Ghost" />
  </div>

  <div class="hero-content">
    <h1 class="hero-title">
      <span class="title-text">Sneaky Ghost</span>
    </h1>
    <div class="hero-brands">
      <a href="/" class={`brand-link brand-films ${mode === 'films' ? 'active' : ''}`} data-mode="films">
        <span class="brand-name">Films</span>
        <p class="brand-desc">Independent Cinema</p>
      </a>
      <span class="brand-separator">&bull;</span>
      <a href="/labs" class={`brand-link brand-labs ${mode === 'labs' ? 'active' : ''}`} data-mode="labs">
        <span class="brand-name">Labs</span>
        <p class="brand-desc">Creative Technology</p>
      </a>
    </div>
  </div>

  <div class="scroll-indicator">
    <div class="chevron"></div>
    <div class="chevron"></div>
    <div class="chevron"></div>
  </div>
</section>

<style>
  .hero-section {
    position: relative;
    height: 100vh;
    min-height: 500px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .hero-bg-films,
  .hero-bg-labs {
    position: absolute;
    inset: 0;
    transition: opacity 0.6s ease;
  }

  /* Mode-based hero background switching */
  :global(body.mode-labs) .hero-bg-films {
    opacity: 0;
    pointer-events: none;
  }

  :global(body.mode-films) .hero-bg-labs {
    opacity: 0;
    pointer-events: none;
  }

  #circuit-canvas {
    width: 100%;
    height: 100%;
    display: block;
  }

  .hero-overlay-labs {
    background-color: rgba(0, 0, 0, 0.3);
  }

  .hero-logo {
    position: absolute;
    bottom: -20px;
    right: 40px;
    z-index: 2;
    pointer-events: none;
  }

  .hero-logo::before {
    content: '';
    position: absolute;
    bottom: 0;
    right: 0;
    width: 1200%;
    height: 1200%;
    transform: translate(50%, 50%);
    background: radial-gradient(circle at center, rgba(180, 180, 180, 0.4) 0%, rgba(100, 100, 100, 0.2) 20%, transparent 50%);
    z-index: -1;
    pointer-events: none;
  }

  .hero-logo img {
    width: 360px;
    height: auto;
    opacity: 0.95;
    filter: drop-shadow(0 2px 10px rgba(0, 0, 0, 0.4));
  }

  @media (max-width: 900px) {
    .hero-logo {
      right: 15px;
      bottom: -10px;
    }
    .hero-logo img {
      width: 160px;
    }
  }

  @media (max-width: 400px) {
    .hero-logo {
      display: none;
    }
    .scroll-indicator {
      display: none;
    }
  }

  .hero-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
  }

  .svg-filters {
    position: absolute;
    width: 0;
    height: 0;
    overflow: hidden;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    padding: 0 20px;
  }

  .hero-title {
    margin-bottom: 1rem;
    position: relative;
  }

  .title-text {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-size: clamp(3rem, 8vw, 7rem);
    font-weight: 300;
    color: #fff;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    display: inline-block;
    filter: url(#ghostly-mist) url(#glow);
    text-shadow:
      0 0 10px rgba(180, 200, 255, 0.6),
      0 0 20px rgba(150, 180, 255, 0.4),
      0 0 40px rgba(100, 150, 255, 0.3),
      0 0 60px rgba(80, 120, 220, 0.2);
    animation: ghostFloat 8s ease-in-out infinite, ghostFade 12s ease-in-out infinite;
  }

  @keyframes ghostFloat {
    0%, 100% {
      transform: translateY(0) scale(1);
    }
    25% {
      transform: translateY(-5px) scale(1.01);
    }
    50% {
      transform: translateY(3px) scale(0.99);
    }
    75% {
      transform: translateY(-3px) scale(1.005);
    }
  }

  @keyframes ghostFade {
    0%, 100% {
      opacity: 0.95;
    }
    33% {
      opacity: 0.85;
    }
    66% {
      opacity: 1;
    }
  }

  /* Hero brands container */
  .hero-brands {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 3rem;
    margin-top: 0.5rem;
  }

  /* Individual brand links */
  .brand-link {
    text-decoration: none;
    padding: 1rem 2rem;
    position: relative;
    transition: transform 0.3s ease;
    cursor: pointer;
  }

  .brand-link:hover {
    transform: translateY(-3px);
  }

  /* Films brand */
  .brand-films {
    color: #e8d5c4;
  }

  .brand-films .brand-name {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-size: clamp(1.5rem, 4vw, 3rem);
    font-weight: 300;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    text-shadow: 0 0 20px rgba(232, 213, 196, 0.4);
    transition: all 0.3s ease;
    display: block;
  }

  .brand-films:hover .brand-name,
  .brand-films.active .brand-name {
    text-shadow:
      0 0 10px rgba(232, 213, 196, 0.8),
      0 0 30px rgba(232, 213, 196, 0.5);
  }

  .brand-films .brand-desc {
    font-family: 'Montserrat', sans-serif;
    font-size: 0.7rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: rgba(232, 213, 196, 0.6);
    margin-top: 0.5rem;
    transition: color 0.3s ease;
  }

  .brand-films:hover .brand-desc,
  .brand-films.active .brand-desc {
    color: rgba(232, 213, 196, 0.9);
  }

  /* Labs brand */
  .brand-labs {
    color: #00CED1;
  }

  .brand-labs .brand-name {
    font-family: 'JetBrains Mono', 'Fira Code', 'Consolas', monospace;
    font-size: clamp(1.3rem, 3.5vw, 2.5rem);
    font-weight: 400;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    text-shadow: 0 0 20px rgba(0, 206, 209, 0.4);
    transition: all 0.3s ease;
    display: block;
  }

  .brand-labs:hover .brand-name,
  .brand-labs.active .brand-name {
    text-shadow:
      0 0 10px rgba(0, 206, 209, 0.8),
      0 0 30px rgba(0, 206, 209, 0.5),
      0 0 50px rgba(0, 206, 209, 0.3);
  }

  .brand-labs .brand-desc {
    font-family: 'Montserrat', sans-serif;
    font-size: 0.7rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: rgba(0, 206, 209, 0.6);
    margin-top: 0.5rem;
    transition: color 0.3s ease;
  }

  .brand-labs:hover .brand-desc,
  .brand-labs.active .brand-desc {
    color: rgba(0, 206, 209, 0.9);
  }

  /* Separator dot */
  .brand-separator {
    display: flex;
    align-items: center;
    color: rgba(255, 255, 255, 0.3);
    font-size: 2rem;
  }

  /* Underline effects */
  .brand-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 2px;
    transform: translateX(-50%);
    transition: width 0.3s ease;
  }

  .brand-films::after {
    background: linear-gradient(90deg, transparent, #e8d5c4, transparent);
  }

  .brand-labs::after {
    background: linear-gradient(90deg, transparent, #00CED1, transparent);
  }

  .brand-link:hover::after,
  .brand-link.active::after {
    width: 80%;
  }

  @media (max-width: 768px) {
    .title-text {
      font-size: clamp(2rem, 8vw, 4rem);
      letter-spacing: 0.15em;
    }
    .hero-title {
      margin-bottom: 0.5rem;
    }
    .hero-brands {
      flex-direction: column;
      gap: 1.5rem;
    }
    .brand-separator {
      display: none;
    }
    .brand-link {
      padding: 0.75rem 1.5rem;
    }
  }

  @media (max-width: 400px) {
    .hero-title {
      display: block;
    }
    .title-text {
      font-size: clamp(1.5rem, 10vw, 2.5rem);
      letter-spacing: 0.1em;
    }
  }

  /* Scroll indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 50px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 3;
    width: 24px;
    height: 48px;
  }

  .scroll-indicator .chevron {
    position: absolute;
    width: 28px;
    height: 8px;
    opacity: 0;
    transform: scale3d(0.5, 0.5, 0.5);
    animation: chevron-move 3s ease-out infinite;
  }

  .scroll-indicator .chevron:first-child {
    animation: chevron-move 3s ease-out 1s infinite;
  }

  .scroll-indicator .chevron:nth-child(2) {
    animation: chevron-move 3s ease-out 2s infinite;
  }

  .scroll-indicator .chevron:before,
  .scroll-indicator .chevron:after {
    content: '';
    position: absolute;
    top: 0;
    height: 100%;
    width: 51%;
    background: #fff;
  }

  .scroll-indicator .chevron:before {
    left: 0;
    transform: skew(0deg, 30deg);
  }

  .scroll-indicator .chevron:after {
    right: 0;
    width: 50%;
    transform: skew(0deg, -30deg);
  }

  @keyframes chevron-move {
    25% {
      opacity: 1;
    }
    33% {
      opacity: 1;
      transform: translateY(30px);
    }
    67% {
      opacity: 1;
      transform: translateY(40px);
    }
    100% {
      opacity: 0;
      transform: translateY(55px) scale3d(0.5, 0.5, 0.5);
    }
  }
</style>

<script>
  // Mode toggle functionality
  document.addEventListener('DOMContentLoaded', () => {
    const brandLinks = document.querySelectorAll('.brand-link');

    brandLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const mode = (link as HTMLElement).dataset.mode as 'films' | 'labs';
        setMode(mode);
      });
    });

    // Handle browser back/forward
    window.addEventListener('popstate', () => {
      const isLabs = window.location.pathname === '/labs' || window.location.pathname === '/labs/';
      updateActiveStates(isLabs ? 'labs' : 'films');
    });
  });

  function setMode(mode: 'films' | 'labs') {
    const isLabs = mode === 'labs';

    // Update URL without reload
    history.pushState({ mode }, '', isLabs ? '/labs' : '/');

    // Toggle content visibility with CSS classes
    document.body.classList.toggle('mode-labs', isLabs);
    document.body.classList.toggle('mode-films', !isLabs);

    // Update active states
    updateActiveStates(mode);
  }

  function updateActiveStates(mode: 'films' | 'labs') {
    const filmsLink = document.querySelector('.brand-films');
    const labsLink = document.querySelector('.brand-labs');

    filmsLink?.classList.toggle('active', mode === 'films');
    labsLink?.classList.toggle('active', mode === 'labs');
  }

  // Circuit grid canvas animation
  (function initCircuitCanvas() {
    const canvas = document.getElementById('circuit-canvas') as HTMLCanvasElement;
    if (!canvas) return;
    const ctx = canvas.getContext('2d')!;

    const GRID = 70;
    const NODE_R = 1.5;
    const TEAL = [0, 206, 209];

    interface Trace {
      x: number; y: number;
      tx: number; ty: number;
      progress: number;
      speed: number;
      alpha: number;
    }

    let traces: Trace[] = [];
    let cols = 0, rows = 0;

    function resize() {
      const dpr = window.devicePixelRatio || 1;
      const rect = canvas.parentElement!.getBoundingClientRect();
      canvas.width = rect.width * dpr;
      canvas.height = rect.height * dpr;
      ctx.setTransform(dpr, 0, 0, dpr, 0, 0);
      cols = Math.ceil(rect.width / GRID);
      rows = Math.ceil(rect.height / GRID);
    }

    function createTrace() {
      const sx = Math.floor(Math.random() * cols) * GRID;
      const sy = Math.floor(Math.random() * rows) * GRID;
      const dirs = [[1,0],[-1,0],[0,1],[0,-1]];
      const segments: number[][] = [];
      let cx = sx, cy = sy;

      // Build a multi-segment path (2-5 turns)
      const turnCount = 2 + Math.floor(Math.random() * 4);
      for (let i = 0; i < turnCount; i++) {
        const d = dirs[Math.floor(Math.random() * dirs.length)];
        const steps = 2 + Math.floor(Math.random() * 5);
        const nx = cx + d[0] * steps * GRID;
        const ny = cy + d[1] * steps * GRID;
        segments.push([cx, cy, nx, ny]);
        cx = nx; cy = ny;
      }

      const totalLen = segments.reduce((sum, s) =>
        sum + Math.abs(s[2] - s[0]) + Math.abs(s[3] - s[1]), 0);

      traces.push({
        x: sx, y: sy,
        tx: cx, ty: cy,
        progress: 0,
        speed: 0.8 + Math.random() * 1.5,
        alpha: 0.25 + Math.random() * 0.35,
        // @ts-ignore - attaching extra data
        segments, totalLen
      });
    }

    function draw(time: number) {
      if (!document.body.classList.contains('mode-labs')) {
        requestAnimationFrame(draw);
        return;
      }

      const w = canvas.width / (window.devicePixelRatio || 1);
      const h = canvas.height / (window.devicePixelRatio || 1);

      // Background
      ctx.fillStyle = '#080a0f';
      ctx.fillRect(0, 0, w, h);

      // Grid lines
      ctx.strokeStyle = `rgba(${TEAL[0]}, ${TEAL[1]}, ${TEAL[2]}, 0.06)`;
      ctx.lineWidth = 0.5;
      for (let x = 0; x <= w; x += GRID) {
        ctx.beginPath(); ctx.moveTo(x, 0); ctx.lineTo(x, h); ctx.stroke();
      }
      for (let y = 0; y <= h; y += GRID) {
        ctx.beginPath(); ctx.moveTo(0, y); ctx.lineTo(w, y); ctx.stroke();
      }

      // Nodes at intersections
      for (let x = 0; x <= w; x += GRID) {
        for (let y = 0; y <= h; y += GRID) {
          const pulse = Math.sin(time * 0.0008 + x * 0.05 + y * 0.07) * 0.5 + 0.5;
          const alpha = 0.08 + pulse * 0.18;

          ctx.beginPath();
          ctx.arc(x, y, NODE_R, 0, Math.PI * 2);
          ctx.fillStyle = `rgba(${TEAL[0]}, ${TEAL[1]}, ${TEAL[2]}, ${alpha})`;
          ctx.fill();

          // Bright glow on some nodes
          if (pulse > 0.75) {
            const glowR = NODE_R * 6;
            const grad = ctx.createRadialGradient(x, y, 0, x, y, glowR);
            grad.addColorStop(0, `rgba(${TEAL[0]}, ${TEAL[1]}, ${TEAL[2]}, ${pulse * 0.12})`);
            grad.addColorStop(1, 'transparent');
            ctx.beginPath();
            ctx.arc(x, y, glowR, 0, Math.PI * 2);
            ctx.fillStyle = grad;
            ctx.fill();
          }
        }
      }

      // Data traces
      traces.forEach((t: any, i) => {
        t.progress += t.speed;
        const segs = t.segments as number[][];
        let drawn = 0;

        ctx.strokeStyle = `rgba(${TEAL[0]}, ${TEAL[1]}, ${TEAL[2]}, ${t.alpha})`;
        ctx.lineWidth = 1.5;
        ctx.shadowColor = `rgba(${TEAL[0]}, ${TEAL[1]}, ${TEAL[2]}, ${t.alpha * 0.6})`;
        ctx.shadowBlur = 8;

        for (const seg of segs) {
          const segLen = Math.abs(seg[2] - seg[0]) + Math.abs(seg[3] - seg[1]);
          const segStart = drawn;
          const segEnd = drawn + segLen;

          if (t.progress > segStart) {
            const frac = Math.min(1, (t.progress - segStart) / segLen);
            const ex = seg[0] + (seg[2] - seg[0]) * frac;
            const ey = seg[1] + (seg[3] - seg[1]) * frac;
            ctx.beginPath();
            ctx.moveTo(seg[0], seg[1]);
            ctx.lineTo(ex, ey);
            ctx.stroke();

            // Bright head dot
            if (t.progress < segEnd) {
              const headGrad = ctx.createRadialGradient(ex, ey, 0, ex, ey, 6);
              headGrad.addColorStop(0, `rgba(${TEAL[0]}, ${TEAL[1]}, ${TEAL[2]}, 0.8)`);
              headGrad.addColorStop(1, 'transparent');
              ctx.beginPath();
              ctx.arc(ex, ey, 6, 0, Math.PI * 2);
              ctx.fillStyle = headGrad;
              ctx.fill();
            }
          }

          drawn += segLen;
        }

        ctx.shadowBlur = 0;

        // Remove when done + faded
        if (t.progress > t.totalLen + 30) {
          traces.splice(i, 1);
        }
      });

      // Spawn new traces
      if (Math.random() < 0.025 && traces.length < 6) {
        createTrace();
      }

      // Ambient glow zones
      const gx1 = w * (0.2 + 0.1 * Math.sin(time * 0.0003));
      const gy1 = h * (0.3 + 0.1 * Math.cos(time * 0.0004));
      const grad1 = ctx.createRadialGradient(gx1, gy1, 0, gx1, gy1, 300);
      grad1.addColorStop(0, `rgba(${TEAL[0]}, ${TEAL[1]}, ${TEAL[2]}, 0.03)`);
      grad1.addColorStop(1, 'transparent');
      ctx.fillStyle = grad1;
      ctx.fillRect(0, 0, w, h);

      const gx2 = w * (0.75 + 0.08 * Math.sin(time * 0.0005));
      const gy2 = h * (0.65 + 0.1 * Math.cos(time * 0.00035));
      const grad2 = ctx.createRadialGradient(gx2, gy2, 0, gx2, gy2, 250);
      grad2.addColorStop(0, `rgba(${TEAL[0]}, ${TEAL[1]}, ${TEAL[2]}, 0.025)`);
      grad2.addColorStop(1, 'transparent');
      ctx.fillStyle = grad2;
      ctx.fillRect(0, 0, w, h);

      requestAnimationFrame(draw);
    }

    resize();
    window.addEventListener('resize', resize);
    requestAnimationFrame(draw);
  })();
</script>
