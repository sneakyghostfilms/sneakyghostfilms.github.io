---
interface Props {
  slides?: string[];
  videoFile?: string;
  videoPoster?: string;
  logo?: string;
}

const {
  slides = ["Captivating stories", "New realities", "Artistic vision"],
  videoFile = "/files/uploads/main_background_vid",
  videoPoster = "/files/uploads/1690x1100.jpg",
  logo = "/files/uploads/catlogo.svg"
} = Astro.props;
---

<section id="home" class="hero-section text-light">
  <!-- SVG filter for ghostly mist effect -->
  <svg class="svg-filters" aria-hidden="true">
    <defs>
      <filter id="ghostly-mist" x="-20%" y="-20%" width="140%" height="140%">
        <feTurbulence
          type="fractalNoise"
          baseFrequency="0.015"
          numOctaves="3"
          result="noise"
        >
          <animate
            attributeName="baseFrequency"
            values="0.015;0.02;0.015"
            dur="8s"
            repeatCount="indefinite"
          />
        </feTurbulence>
        <feDisplacementMap
          in="SourceGraphic"
          in2="noise"
          scale="8"
          xChannelSelector="R"
          yChannelSelector="G"
        >
          <animate
            attributeName="scale"
            values="8;12;8"
            dur="6s"
            repeatCount="indefinite"
          />
        </feDisplacementMap>
      </filter>
      <filter id="glow">
        <feGaussianBlur stdDeviation="2" result="coloredBlur"/>
        <feMerge>
          <feMergeNode in="coloredBlur"/>
          <feMergeNode in="SourceGraphic"/>
        </feMerge>
      </filter>
    </defs>
  </svg>

  <div class="hero-background">
    <video
      class="hero-video"
      autoplay
      muted
      loop
      playsinline
      poster={videoPoster}
    >
      <source src={`${videoFile}.webm`} type="video/webm" />
      <source src={`${videoFile}.mp4`} type="video/mp4" />
    </video>
    <div class="hero-overlay"></div>
  </div>

  <div class="hero-logo">
    <img src={logo} alt="Sneaky Ghost Films" />
  </div>

  <div class="hero-content">
    <h1 class="hero-title">
      <span class="title-text">Sneaky Ghost Films</span>
    </h1>
    <div class="hero-slider" aria-live="polite">
      {slides.map((slide, index) => (
        <div class="hero-slide" data-index={index} aria-hidden={index !== 0}>
          <strong>{slide}</strong>
        </div>
      ))}
    </div>
  </div>

  <div class="scroll-indicator">
    <div class="chevron"></div>
    <div class="chevron"></div>
    <div class="chevron"></div>
  </div>
</section>

<style>
  .hero-section {
    position: relative;
    height: 100vh;
    min-height: 500px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .hero-logo {
    position: absolute;
    bottom: -20px;
    right: 40px;
    z-index: 2;
    pointer-events: none;
  }

  .hero-logo::before {
    content: '';
    position: absolute;
    bottom: 0;
    right: 0;
    width: 1200%;
    height: 1200%;
    transform: translate(50%, 50%);
    background: radial-gradient(circle at center, rgba(180, 180, 180, 0.4) 0%, rgba(100, 100, 100, 0.2) 20%, transparent 50%);
    z-index: -1;
    pointer-events: none;
  }

  .hero-logo img {
    width: 360px;
    height: auto;
    opacity: 0.95;
    filter: drop-shadow(0 2px 10px rgba(0, 0, 0, 0.4));
  }

  @media (max-width: 900px) {
    .hero-logo {
      right: 15px;
      bottom: -10px;
    }
    .hero-logo img {
      width: 160px;
    }
  }

  @media (max-width: 400px) {
    .hero-logo {
      display: none;
    }
    .scroll-indicator {
      display: none;
    }
  }

  .hero-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
  }

  .svg-filters {
    position: absolute;
    width: 0;
    height: 0;
    overflow: hidden;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    padding: 0 20px;
  }

  .hero-title {
    margin-bottom: 30px;
    position: relative;
  }

  .title-text {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-size: clamp(2.5rem, 6vw, 5rem);
    font-weight: 300;
    color: #fff;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    display: inline-block;
    filter: url(#ghostly-mist) url(#glow);
    text-shadow:
      0 0 10px rgba(180, 200, 255, 0.6),
      0 0 20px rgba(150, 180, 255, 0.4),
      0 0 40px rgba(100, 150, 255, 0.3),
      0 0 60px rgba(80, 120, 220, 0.2);
    animation: ghostFloat 8s ease-in-out infinite, ghostFade 12s ease-in-out infinite;
  }

  @keyframes ghostFloat {
    0%, 100% {
      transform: translateY(0) scale(1);
    }
    25% {
      transform: translateY(-5px) scale(1.01);
    }
    50% {
      transform: translateY(3px) scale(0.99);
    }
    75% {
      transform: translateY(-3px) scale(1.005);
    }
  }

  @keyframes ghostFade {
    0%, 100% {
      opacity: 0.95;
    }
    33% {
      opacity: 0.85;
    }
    66% {
      opacity: 1;
    }
  }

  @media (max-width: 768px) {
    .title-text {
      font-size: clamp(1.8rem, 6vw, 2.9rem);
      letter-spacing: 0.1em;
    }
    .hero-title {
      margin-bottom: 20px;
    }
  }

  @media (max-width: 400px) {
    .hero-title {
      display: none;
    }
  }

  .hero-slider {
    position: relative;
    min-height: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-slide {
    position: absolute;
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease, transform 0.8s ease;
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    font-weight: 300;
    color: rgba(210, 220, 245, 0.9);
    letter-spacing: 0.08em;
    white-space: nowrap;
  }

  .hero-slide.active {
    opacity: 1;
    transform: translateY(0);
  }

  @media (max-width: 768px) {
    .hero-content {
      width: 100%;
      padding: 0;
    }
    .hero-slider {
      width: 100%;
    }
    .hero-slide {
      position: relative;
      white-space: normal;
      width: 100%;
      padding: 0 5%;
      box-sizing: border-box;
      font-size: clamp(1.2rem, 5vw, 1.8rem);
      text-align: center;
      line-height: 1.4;
    }
    .hero-slide:not(.active) {
      position: absolute;
      top: 50%;
      left: 0;
      transform: translateY(-50%);
    }
  }

  @media (max-width: 400px) {
    .hero-slide {
      display: none;
    }
  }

  /* Scroll indicator */
  .scroll-indicator {
    position: absolute;
    bottom: 50px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 3;
    width: 24px;
    height: 48px;
  }

  .scroll-indicator .chevron {
    position: absolute;
    width: 28px;
    height: 8px;
    opacity: 0;
    transform: scale3d(0.5, 0.5, 0.5);
    animation: chevron-move 3s ease-out infinite;
  }

  .scroll-indicator .chevron:first-child {
    animation: chevron-move 3s ease-out 1s infinite;
  }

  .scroll-indicator .chevron:nth-child(2) {
    animation: chevron-move 3s ease-out 2s infinite;
  }

  .scroll-indicator .chevron:before,
  .scroll-indicator .chevron:after {
    content: '';
    position: absolute;
    top: 0;
    height: 100%;
    width: 51%;
    background: #fff;
  }

  .scroll-indicator .chevron:before {
    left: 0;
    transform: skew(0deg, 30deg);
  }

  .scroll-indicator .chevron:after {
    right: 0;
    width: 50%;
    transform: skew(0deg, -30deg);
  }

  @keyframes chevron-move {
    25% {
      opacity: 1;
    }
    33% {
      opacity: 1;
      transform: translateY(30px);
    }
    67% {
      opacity: 1;
      transform: translateY(40px);
    }
    100% {
      opacity: 0;
      transform: translateY(55px) scale3d(0.5, 0.5, 0.5);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const slides = document.querySelectorAll('.hero-slide');
    if (slides.length === 0) return;

    let currentIndex = 0;
    const slideInterval = 5000;

    function showSlide(index: number) {
      slides.forEach((slide, i) => {
        const isActive = i === index;
        slide.classList.toggle('active', isActive);
        slide.setAttribute('aria-hidden', (!isActive).toString());
      });
    }

    function nextSlide() {
      currentIndex = (currentIndex + 1) % slides.length;
      showSlide(currentIndex);
    }

    // Show first slide
    showSlide(0);

    // Auto-advance slides
    setInterval(nextSlide, slideInterval);
  });
</script>
